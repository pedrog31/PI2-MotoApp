<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:cardCornerRadius="@dimen/appbar_padding_top"
            app:cardElevation="@dimen/fui_button_inset_right">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/imagen_ruta_privada"
                    android:layout_width="170dp"
                    android:layout_height="0dp"
                    app:srcCompat="@mipmap/ic_launcher_round" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp" android:id="@+id/texto_nombre_ruta_privada"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAlignment="center" android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toTopOf="@+id/texto_dificultad_ruta_privada" android:textSize="18sp"
                    android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/imagen_ruta_privada"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/texto_dificultad_ruta_privada"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/texto_nombre_ruta_privada"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toTopOf="@+id/texto_experiencia_ruta_privada"
                    app:layout_constraintStart_toEndOf="@+id/imagen_ruta_privada" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/texto_experiencia_ruta_privada"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/texto_dificultad_ruta_privada"
                    android:layout_marginTop="4dp"
                    app:layout_constraintBottom_toTopOf="@+id/texto_distancia_ruta_privada"
                    android:layout_marginBottom="4dp" app:layout_constraintStart_toEndOf="@+id/imagen_ruta_privada"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/texto_distancia_ruta_privada"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/texto_experiencia_ruta_privada"
                    android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toTopOf="@+id/texto_calificacion_ruta_privada"
                    app:layout_constraintStart_toEndOf="@+id/imagen_ruta_privada" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/texto_calificacion_ruta_privada"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/texto_distancia_ruta_privada"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toTopOf="@+id/texto_estado_ruta_privada"
                    app:layout_constraintStart_toEndOf="@+id/imagen_ruta_privada" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/texto_estado_ruta_privada"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/texto_calificacion_ruta_privada"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imagen_ruta_privada" android:layout_marginStart="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>