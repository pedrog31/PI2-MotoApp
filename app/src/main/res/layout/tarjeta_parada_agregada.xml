<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:text="TextView"
            android:layout_width="280dp"
            android:layout_height="wrap_content" android:id="@+id/textView_parada_item"
            android:drawableLeft="@drawable/pin" android:layout_marginTop="3dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginStart="99dp"
            android:gravity="right"/>
    <Button
            android:layout_width="30dp"
            android:layout_height="30dp" android:id="@+id/boton_eliminar_parada"
            android:background="@android:drawable/presence_offline"
            android:layout_marginTop="-1dp" android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView_parada_item" android:layout_marginStart="95dp"
            android:gravity="right" android:layout_alignParentEnd="true" android:layout_marginEnd="2dp"/>

</RelativeLayout>