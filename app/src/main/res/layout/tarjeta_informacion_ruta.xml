<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/fui_idp_button_background_phone"
            android:id="@+id/imagen_ruta_publica"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/nombre_ruta_publica"
            app:layout_constraintVertical_chainStyle="packed" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/nombre_ruta_publica"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imagen_ruta_publica" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/descripcion_ruta_publica" android:textAlignment="center"
            android:textStyle="bold" android:textSize="18sp" android:elevation="18sp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/descripcion_ruta_publica"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nombre_ruta_publica" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/experiencia_ruta_publica"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/descripcion_ruta_publica" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/distancia_ruta_publica"
            android:layout_marginEnd="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/dificultad_ruta_publica"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/distancia_ruta_publica"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/descripcion_ruta_publica" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/experiencia_ruta_publica"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/calificacion_ruta_publica"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/dificultad_ruta_publica"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/experiencia_ruta_publica"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/calificacion_ruta_publica"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/paradas_ruta_publica"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/calificacion_ruta_publica"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/distancia_ruta_publica" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/dificultad_ruta_publica"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/paradas_ruta_publica"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/paradas_ruta_publica"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textStyle="bold" android:textSize="18sp" android:elevation="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            android:text="Paradas"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/parada_ruta_publica_valor"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/parada_ruta_publica_valor"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/paradas_ruta_publica"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
