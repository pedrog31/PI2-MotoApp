<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ListaAmigosRuta">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lista_amigos_checkbox"
            android:name="co.edu.udea.motoapp.ui.lista_amigos.ListaAmigos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/tarjeta_amigo_checkbox"
            tools:context=".ui.lista_amigos.ListaAmigos"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/boton_invita_amigos"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lista_amigos_checkbox"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>