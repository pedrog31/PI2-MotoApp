<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragmentonuevaruta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.nuevaruta.NuevaRuta">
    <TextView
            android:text="Invitaciones a rutas"
            android:layout_width="match_parent"
            android:layout_height="30dp" android:id="@+id/textView_invitacion_rutas"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"/>
    <androidx.recyclerview.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/list_invitacion_rutas"
            android:name="co.edu.udea.motoapp.ui.lista_amigos.ListaRutasPrivadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/tarjeta_ruta_privada"
            tools:context=".ui.rutas_privadas.ListaRutasPrivadas"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/textView_invitacion_rutas"/>
    <TextView
            android:text="Rutas Propias"
            android:layout_width="match_parent"
            android:layout_height="30dp" android:id="@+id/textView_rutas_propias"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/list_invitacion_rutas"/>
    <androidx.recyclerview.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/list"
            android:name="co.edu.udea.motoapp.ui.lista_amigos.ListaRutasPrivadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/tarjeta_ruta_privada"
            tools:context=".ui.rutas_privadas.ListaRutasPrivadas"
            tools:layout_editor_absoluteX="171dp" app:layout_constraintTop_toBottomOf="@+id/textView_rutas_propias"/>
</androidx.constraintlayout.widget.ConstraintLayout>
