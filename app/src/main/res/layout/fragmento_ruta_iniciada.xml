<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/fragmentorutainiciada"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ruta_iniciada.RutaIniciada">

    <com.github.aakira.expandablelayout.ExpandableWeightLayout
            android:id="@+id/acordeon_informacion_ruta"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FAFAFA"
            app:ael_duration="800"
            app:ael_expanded="true"
            app:ael_interpolator="fastOutSlowIn"
            app:ael_orientation="vertical">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UseCompoundDrawables">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/imagen_ruta"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@mipmap/ic_launcher_round"
                    android:contentDescription="@string/imagen_ruta"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/texto_descripcion_ruta"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"/>
        </LinearLayout>
    </com.github.aakira.expandablelayout.ExpandableWeightLayout>

    <Button
            android:id="@+id/boton_mapa_ruta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="16dp"
            android:text="@string/boton_mapa_ruta_mostrar"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

    <com.github.aakira.expandablelayout.ExpandableWeightLayout
            android:id="@+id/acordeon_mapa_ruta"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FAFAFA"
            app:ael_duration="800"
            app:ael_expanded="false"
            app:ael_interpolator="fastOutSlowIn"
            app:ael_orientation="vertical">
        <fragment android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/mapa_rutas_privadas"
                  android:name="com.google.android.gms.maps.SupportMapFragment"/>
    </com.github.aakira.expandablelayout.ExpandableWeightLayout>
</LinearLayout>
