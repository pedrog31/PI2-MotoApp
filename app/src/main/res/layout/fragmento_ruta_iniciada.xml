<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/fragmentorutainiciada"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ruta_iniciada.RutaIniciada">

    <com.github.aakira.expandablelayout.ExpandableWeightLayout
            android:id="@+id/acordeon_informacion_ruta"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FAFAFA"
            app:ael_duration="800"
            app:ael_expanded="true"
            app:ael_interpolator="fastOutSlowIn"
            app:ael_orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UseCompoundDrawables">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/imagen_ruta"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@mipmap/ic_launcher_round"
                    android:contentDescription="@string/imagen_ruta" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/texto_descripcion_ruta"
                    android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/texto_descripcion_ruta"
                    android:textAlignment="center"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imagen_ruta" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>

            <Button
                    android:id="@+id/boton_iniciar_ruta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:gravity="start|center_vertical"
                    android:layout_margin="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="16dp"
                    android:text="@string/boton_iniciar_ruta"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/texto_descripcion_ruta"
                    app:layout_constraintEnd_toStartOf="@+id/boton_eliminar_ruta" android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintVertical_bias="0.0"/>

            <Button
                    android:id="@+id/boton_eliminar_ruta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:textColor="@android:color/white"
                    android:gravity="start|center_vertical"
                    android:layout_margin="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="16dp"
                    android:text="@string/boton_eliminar_ruta"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/texto_descripcion_ruta"
                    android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/boton_iniciar_ruta"
                    android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintVertical_bias="0.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.github.aakira.expandablelayout.ExpandableWeightLayout>

    <Button
            android:id="@+id/boton_mapa_ruta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="16dp"
            android:text="@string/boton_mapa_ruta_mostrar"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

    <com.github.aakira.expandablelayout.ExpandableWeightLayout
            android:id="@+id/acordeon_mapa_ruta"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FAFAFA"
            app:ael_duration="800"
            app:ael_expanded="false"
            app:ael_interpolator="fastOutSlowIn"
            app:ael_orientation="vertical">
        <fragment android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/mapa_rutas_privadas"
                  android:name="com.google.android.gms.maps.SupportMapFragment"/>
    </com.github.aakira.expandablelayout.ExpandableWeightLayout>
</LinearLayout>
