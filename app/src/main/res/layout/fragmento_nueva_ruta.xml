<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragmentonuevaruta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.nuevaruta.NuevaRuta">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/introfragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:id="@+id/textInputLayout"
                    android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="1.0">

                <EditText
                        android:layout_width="365dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/nombre_ruta" android:layout_marginTop="92dp"
                        android:hint="@string/nombre_ruta"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.62"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="105dp"
                    android:id="@+id/textInputLayout1"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout">
                <EditText
                        android:layout_width="365dp"
                        android:layout_height="83dp"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:hint="@string/descripcion_ruta"
                        tools:layout_editor_absoluteY="175dp" android:id="@+id/descripcion_ruta"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.62"
                        android:textAlignment="viewStart"/>
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="365dp"
                    android:layout_height="38dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout1" android:id="@+id/linearLayout"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
                <com.jaiselrahman.hintspinner.HintSpinner
                        android:id="@+id/hint_spinner"
                        android:layout_width="365dp"
                        android:layout_height="wrap_content"
                        android:autofillHints="@string/nombre"/>
            </LinearLayout>

            <TextView
                    android:text="Lugar de partida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.068"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
            <com.seatgeek.placesautocomplete.PlacesAutocompleteTextView
                    android:id="@+id/places_autocomplete"
                    android:layout_width="360dp"
                    android:layout_height="45dp"
                    app:pacv_googleMapsApiKey="AIzaSyCFcNkjg3ufiUtCKMMqbi75lc__0dlM4OU"
                    app:pacv_resultType="geocode"
                    app:pacv_clearEnabled="true"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"/>
            <TextView
                    android:text="Lugar de llegada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_lugar_llegada"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.051"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/recycler_view_paradas"/>

            <com.seatgeek.placesautocomplete.PlacesAutocompleteTextView
                    android:id="@+id/places_autocomplete_lugar_llegada"
                    android:layout_width="365dp"
                    android:layout_height="47dp"
                    app:pacv_googleMapsApiKey="AIzaSyCFcNkjg3ufiUtCKMMqbi75lc__0dlM4OU"
                    app:pacv_resultType="geocode"
                    app:pacv_clearEnabled="true"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/textView_lugar_llegada"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>
            <Button
                    android:text="Añadir ruta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/boton_agregar_ruta" android:layout_marginTop="76dp"
                    app:layout_constraintTop_toBottomOf="@+id/places_autocomplete_lugar_llegada"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <Button
                    android:text="Añadir parada  "
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/boton_agregar_parada"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/places_autocomplete"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:background="@drawable/rounded_button"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:drawableLeft="@android:drawable/ic_input_add" android:textSize="12sp"
                    android:lineSpacingExtra="14sp" android:textAlignment="viewStart"
                    app:layout_constraintHorizontal_bias="0.498"/>

            <com.seatgeek.placesautocomplete.PlacesAutocompleteTextView
                    android:id="@+id/places_autocomplete_paradas"
                    android:layout_width="360dp"
                    android:layout_height="47dp"
                    app:pacv_googleMapsApiKey="AIzaSyCFcNkjg3ufiUtCKMMqbi75lc__0dlM4OU"
                    app:pacv_resultType="geocode"
                    app:pacv_clearEnabled="true"
                    android:hint="Nueva parada"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/boton_agregar_parada"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"/>


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_paradas"
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="52dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/places_autocomplete_paradas"
                    tools:listitem="@layout/tarjeta_parada_agregada" android:layout_marginTop="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


